@page
@model BlogPostsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Blog Posts</h1>
<a class="btn btn-primary" href="./CreateBlogPost">Create New Post</a>
<table>
    <thead>
        <tr>
            <th>Author</th>
            <th>Title</th>
            <th>Image Link</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blogPost in Model.BlogPosts)
        {
            <tr>
                <td>@blogPost.Author</td>
                <td>@blogPost.Title</td>
                <td>@blogPost.ImageLink</td>
                <td>
                    <a href="./EditBlogPost?id=@blogPost.Id">Edit</a> |
                    <a href="./DeleteBlogPost?id=@blogPost.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
