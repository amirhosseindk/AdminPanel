@page
@model CreateBlogPostModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Create Blog Post</h1>

<form method="post" enctype="multipart/form-data">
    <label for="author">Author:</label>
    <input id="author" name="BlogPost.Author" type="text" />

    <label for="title">Title:</label>
    <input id="title" name="BlogPost.Title" type="text" />

    <label for="text">Text:</label>
    <textarea id="text" name="BlogPost.Text"></textarea>

    <label for="image">Image:</label>
    <input id="image" name="Image" type="file" />

    <label for="imageLink">Image Link:</label>
    <input id="imageLink" name="BlogPost.ImageLink" type="text" />

    <button type="submit">Create</button>
</form>


